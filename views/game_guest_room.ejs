<!DOCTYPE html>
<% include header %>
<% var holder_cdn = "https://cdnjs.cloudflare.com/ajax/libs/holder/2.3.1/holder.min.js"%>



<script src="javascripts/jquery-ui-1.8.23.custom.min.js" type="text/javascript"></script>
<script src="javascripts/jquery.mousewheel.min.js" type="text/javascript"></script>
<script src="javascripts/jquery.smoothdivscroll-1.3-min.js" type="text/javascript"></script>
<script src="javascripts/game_common/virtualjoystick.js" type="text/javascript"></script>
<script src="javascripts/game_common/dice.js" type="text/javascript"></script>
<script src="javascripts/game_common/map.js" type="text/javascript"></script>
<script src="javascripts/game_common/user.js" type="text/javascript"></script>
<script src="javascripts/guest/game_guest.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="stylesheets/smoothDivScroll.css" />

<div>
  <!-- LEFT -->
  <div class="guest_left_bar" align="center">
    <div  style="width: 95%; top: 5px; position: relative" >
      <div class="panel panel-default">
        <div class="panel-body">
          <a href="#" class="thumbnail">
            <img data-src="<%= holder_cdn %>/100%x180" src="images/test.jpg" alt="Profile">
          </a>
        </div>
        <div class="panel-footer"><span style="font-size: 20px"><strong>aginika</strong></span></div>
      </div>
    </div>

    <div  class="image-scroll" id="makeMeScrollable">
      <img data-src="<%= holder_cdn %>/100%x180" src="images/test.jpg" alt="Profile" height="90%">
      <img data-src="<%= holder_cdn %>/100%x180" src="images/test.jpg" alt="Profile" height="90%">
      <img data-src="<%= holder_cdn %>/100%x180" src="images/test.jpg" alt="Profile" height="90%">
      <img data-src="<%= holder_cdn %>/100%x180" src="images/test.jpg" alt="Profile" height="90%">
    </div>

    <div style="width: 95%; top: 5px; position: relative">
      <div class="panel panel-success">
        <div class="panel-heading">
          User Property
        </div>
        <div class="panel-body" id="user_property">Panel footer</div>
      </div>
    </div>
    <button type="button" class="btn btn-success btn-sm" onclick="console.log('Hey');$('#overlay').fadeIn(300)">New CharaSheet</button>
    <button type="button" class="btn btn-success btn-sm" >CSV CharaSheet</button>
  </div>

  <!-- CENTER -->
  <div class="guest_middle">
    <div class="game-display">
      <div class="game-display-main">
        <ul class="nav nav-tabs" role="tablist" id="game_displays">
          <li class="active"><a href="#3d_view"   role="tab" data-toggle="tab">3D Map</a></li>
          <li><a href="#2d_display"  role="tab" data-toggle="tab">2D Map</a></li>
          <li><a href="#messages"  role="tab" data-toggle="tab">Some Place</a></li>
        </ul>
        <div class="tab-content map_displays">
          <div class="tab-pane fade in active" id="3d_view"></div>
          <div class="tab-pane fade" id="2d_display"></div>
          <div class="tab-pane fade" id="messages">...c</div>
        </div>
        <script>
          $('#game_displays a').click(function (e) {
          e.preventDefault()
          $(this).tab('show')
          })
        </script>
      </div>
      <div class="game-display-sub">
        <div class="map_controller" id="2d_map_con"></div>
      </div>
      
    </div>
    <div class="ui-display">
      <div>
        <span  style="font-size: 20px; margin:20px"><strong>Game Interface</strong></span>
      </div>
      
      <div class="button-area">
        <div class="buttons-col">
          <div class="buttons-row">
            <button type="button" class="btn btn-primary btn-lg">Dice</button>
            <button type="button" class="btn btn-primary btn-lg">Timer</button>
            <button type="button" class="btn btn-primary btn-lg">Dice3</button>
          </div>
          <div class="buttons-row">
            <button type="button" class="btn btn-primary btn-lg">Dice4</button>
            <button type="button" class="btn btn-primary btn-lg">Dice5</button>
            <button type="button" class="btn btn-primary btn-lg">Dice6</button>
          </div>
          <div class="buttons-row">
            <button type="button" class="btn btn-primary btn-lg">Dice7</button>
            <button type="button" class="btn btn-primary btn-lg">Dice8</button>
            <button type="button" class="btn btn-primary btn-lg">Dice9</button>
          </div>
        </div>
      </div>
      <div class="chat-area">
        <div class="chat-log" id="chat-log">
          <table border="1" class="chat-log-table">
            <tbody id="chat-log-tbody">
            </tbody>
          </table>
          <div class="chat-send-row">
            <div class="chat-user-label">You</div>
            <input type="text" id="chat-text" class="chat-input"></input>
            <button class="btn btn-primary chat-send-button" onclick="SendMsg()">Send</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- RIGHT -->
  <div class="guest_right_bar">
  </div>
</div>

<% include footer %>
